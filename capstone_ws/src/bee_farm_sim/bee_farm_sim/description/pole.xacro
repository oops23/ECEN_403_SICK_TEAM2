<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pole">

  <!-- Base link (root of robot) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Vertical pole -->
  <link name="pole">
    <visual name="pole_visual">
      <geometry>
        <cylinder radius="0.1" length="2.9"/>
      </geometry>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
      <material name="light_gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <collision name="pole_collision">
      <geometry>
        <cylinder radius="0.1" length="2.9"/>
      </geometry>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint: base_link -> pole -->
  <joint name="base_to_pole" type="fixed">
    <parent link="base_link"/>
    <child link="pole"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Fix the pole in place -->
  <gazebo reference="pole">
    <static>true</static>
  </gazebo>

  <!-- LiDAR on top -->
  <xacro:include filename="$(find bee_farm_sim)/description/lidar.xacro"/>

</robot>
